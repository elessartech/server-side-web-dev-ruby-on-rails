<h1>New beer</h1>

<%= form_for(@beer) do |f| %>
  name: <%= f.text_field :name %>
  <%= f.select :style, options_from_collection_for_select(@styles, :to_s, :to_s) %>
  <%= f.select :brewery_id, options_from_collection_for_select(@breweries, :id, :to_s) %>

  <%= f.submit %>
<% end %>

<br>

<div>
  <%= link_to "Back to beers", beers_path %>
</div>
