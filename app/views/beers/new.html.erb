<h1>New beer</h1>

<%= form_for(@beer) do |f| %>
  name: <%= f.text_field :name %>
<div>
  <%= f.label :style, style: "display: block" %>
  <%= f.select :style, options_for_select(@styles) %>
</div>

<div>
  <%= f.label :brewery_id, style: "display: block" %>
  <%= f.select :brewery_id, options_from_collection_for_select(@breweries, :id, :name) %>
</div>
  <%= f.submit %>
<% end %>

<br>

<div>
  <%= link_to "Back to beers", beers_path %>
</div>
