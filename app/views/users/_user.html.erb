<div id="<%= dom_id user %>">
  <p>
    <strong>Username:</strong>
    <p>
      <%= user.username %>
    </p>
  </p>
  <p>
    Has made <%= pluralize(user.ratings.length, "rating") %>, average rating <%= user.average_rating %>
  </p>
  <% if user.favorite_style or user.favorite_brewery %>
  <p>
    <strong>Favorite style:</strong> <%= user.favorite_style %>
    <br/>
    <strong>Favorite brewery:</strong> <%= user.favorite_brewery %>
  </p>
  <% end %>
  <p>
    <strong>member of:</strong>
    <ul>
      <% user.memberships.each do |membership| %> 
        <li><%= link_to membership.beer_club.name, membership.beer_club %></li>
      <% end %>
    </ul>
  </p>
  <p>
    <strong>ratings</strong>
    <ul>
      <% user.ratings.each do |rating| %>
        <li> <%= render rating %> <%= button_to 'delete', rating, method: :delete, form: { data: { turbo_confirm: "Are you sure you want delete?"}} %> </li>
      <% end %>
    </ul>
  </p>
</div>
